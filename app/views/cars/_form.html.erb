<%= form_for(@car) do |c| %>
	
	<div class="field">
		<%= c.label :make %><br />
		<%= c.text_field :make %>
	</div>

	<div class="field">
		<%= c.label :summary %><br />
		<%= c.text_area :summary %>
	</div>

	<div class="field">
		<%= c.label :price_in_dollars %><br />
		<%= c.number_field :price_in_dollars %>
	</div>

	<div class="actions"><br />
		<%= c.submit %>
	</div>

<% end %>